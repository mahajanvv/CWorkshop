<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_id"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Participant ID"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_name"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Name Of Participant"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_remaining"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Remaining Fee Of Participant"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_session1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:text="Session1"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_session2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:text="Session2"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_session3"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textSize="13dp"
            android:text="Session3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idondaymanagement_row_session4"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textSize="13dp"
            android:text="Session4"/>
    </LinearLayout>


</android.support.v7.widget.CardView>